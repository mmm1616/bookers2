<div class="container px-5 px-sm-0">
<div class="row">
    <div class ="col-md-3">
        <h2>User info</h2>
        <table class="table">
            <tbody>
                <tr>
                    <% if @user.profile_image.attached? %>
                    <%= image_tag book.user.get_profile_image, size: "100x100" %>
                    <% else %>
                    <%= image_tag 'no_image', size: "100x100" %>
                    <% end %>
                </tr>
                <tr>
                    <th>name</th>
                    <th><%= current_user.name %></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th><%= current_user.introduction %></th>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <a class="btn btn-outline-secondary btn-block" href="users/<%= current_user.id%>/edit"><i class="fas fa-user-cog"></i></a>
        </div>
        
        <h2 class="mt-3">New Book</h2>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
        <label for ="book_title">Title</label>
        <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
        <label for ="book_opinion">Opinion</label>
        <%= f.text_field :body, class:"form-control" %>
        </div>
        <div class="form-group">
        <%= f.submit 'Create Book',class:"btn btn-success" %>
        </div>
        <% end %>
        </div>
    
<div class="col-md-8 off-set-md-1">

    <h2>Books detail</h2>
        <table class="table table-hover table-inverse">
            <tbody>
                <tr>
                  <td><% if @user.profile_image.attached? %>
                    <%= image_tag @book.user.get_profile_image, size: "100x100" %>
                    <% else %>
                    <%= image_tag 'no_image', size: "100x100" %>
                    <% end %><br><%= link_to "#{@book.user.name}", user_path(@book.user.id) %>
                  </td>
                  <td><%= @book.title %></td>
                  <td><%= @book.body %></td>
                  <% if @book.user == current_user %>
                  <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %></td>
                  <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-danger" %>
                  <% end %>
                  </td>
                </tr>
            </tbody>
        </table>

</div>

</div>
</div>
    
