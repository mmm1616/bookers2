<div class="container px-5 px-sm-0">
<div class="row">
    <div class ="col-md-3">
        <h2>User info</h2>
        <table class="table">
            <tbody>
                <tr>
                    <% if @user.profile_image.attached? %>
                    <%= image_tag book.user.get_profile_image, size: "100x100" %>
                    <% else %>
                    <%= image_tag 'no_image', size: "100x100" %>
                    <% end %>
                </tr>
                <tr>
                    <th>name</th>
                    <th><%= @user.name %></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th><%= @user.introduction %></th>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <a class="btn btn-outline-secondary btn-block" href="users/<%= current_user.id%>/edit"><i class="fas fa-user-cog"></i></a>
        </div>
        
        <h2 class="mt-3">New Book</h2>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
        <label for ="book_title">Title</label>
        <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
        <label for ="book_opinion">Opinion</label>
        <%= f.text_field :body, class:"form-control" %>
        </div>
        <div class="form-group">
        <%= f.submit 'Create Book',class:"btn btn-success" %>
        </div>
        <% end %>
        </div>
    
<div class="col-md-8 off-set-md-1">

    <h2>Books</h2>
        <table class="table table-hover table-inverse">
            <thead>
                <tr>
                 <th></th>
                 <th>Title</th>
                 <th>Opinion</th>
                </tr>
            </thead>
        <% @books.each do |book| %>
            <tbody>
                <tr>
                  <td><% if book.user.profile_image.attached? %>
                    <%= image_tag book.user.get_profile_image, size: "100x100" %>
                    <% else %>
                    <%= image_tag 'no_image', size: "100x100" %>
                    <% end %>
                  </td>
                  <td><%= link_to "#{book.title}", book_path(book.user.id) %></td>
                  <td><%= book.body %></td>
                </tr>
            </tbody>
        <% end %>
        </table>

</div>

</div>
</div>
    
